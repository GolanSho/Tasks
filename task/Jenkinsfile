import java.util.logging.Logger
@Field Logger logger = Logger.getLogger('org.example.jobdsl')

pipeline {
  agent {
    kubernetes {
      label 'zip_job'  
      idleMinutes 5  
      yamlFile 'task/build-pod.yaml'  
      defaultContainer 'zip-job'  
    }
  }
  stages {
    stage('Build-zip') {
      steps {  
	logger.info("Running zip job script on zip_job container")

        sh """
		cd task/out-files
		python3 /tmp/zip_job.py
	"""   
      }
    }
    stage('Build-app') {
      steps {  
	logger.info("using gradle container to compile the java app")

        container('gradle') {
	  sh """
		cd task/hello-world-java/src
          	javac HelloWorld.java
	  """
	}
      }
    }
    stage('Build Docker Image') {
      steps {
	logger.info("using the docker container to Build Image of the java app\n and push it to local registry")

        container('docker') {  
          sh """
		cd task/hello-world-java
	  	docker build -t localhost:5000/hello-world:0.1 .
          	docker push localhost:5000/hello-world:0.1
	"""       
        }
      }
    }
  }
}
